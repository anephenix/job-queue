{
	"compilerOptions": {
		"target": "es2016",
		"module": "ES2022",
		"rootDir": "./src",
		"outDir": "./dist",
		"moduleResolution": "node",
		"declaration": true,
		"emitDeclarationOnly": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": false,
		"skipLibCheck": true
	},
	"include": ["src/index.ts", "src/**/*"],
	"exclude": ["node_modules", "test"]
}
